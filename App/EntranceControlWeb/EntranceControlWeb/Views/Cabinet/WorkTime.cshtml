@model EntranceControlWeb.Models.WorkTimeViewModel;
@{
    ViewData["Title"] = "WorkTime";

}

<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">СИСТЕМА УЧЕТА РАБОЧЕГО ВРЕМЕНИ</h5>
    </div>   
    <form>
        <div class="row my-2">
            <div class="row my-3">
                <table class="table-dark table-bordered" style="width:1200px; color:black;">
                    <thead>
                        <tr class="text-center">
                            <th>ID Сотрудник</th>
                            <th>Фактическое время работы</th>
                            <th>Время работы по плану</th>
                        </tr>
                    </thead>
                    @foreach (var data in Model.WorkTime)
                    {
                        <tbody>
                            <tr class="text-md-start">

                                <td>@data.ID</td>
                                <td>@data.TimeWork</td>
                                
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <div class="col-4">
                <a class="btn btn-outline-dark" href="@Url.Action("Chart", "Cabinet")">Просмотр диаграммы посещаемости</a>
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-outline-dark" asp-controller="Cabinet" asp-action="WorkReport">Cохранить файл отчета</button>
            </div>
        </div>
    </form>
</div>

