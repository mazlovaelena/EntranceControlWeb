@model EntranceControlWeb.Models.NewUserViewModel;
@{
    ViewData["Title"] = "Cabinet";

}

<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">ПРОСМОТР ПОСЕТИТЕЛЕЙ САЙТА</h5>
    </div>
    <form>
        <div class="row my-3">

            <div class="card rounded m-3 shadow-lg mx-auto" style="width:1000px">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2 text-center">
                            <label>ФИО:</label>
                        </div>
                        <div class="col-3">
                            @Html.TextBox("Search", "", new { @class = "form-control", @placeholder = "Поиск" })
                        </div>
                        <div class="col-4">
                            @Html.CheckBox("Hide", false)<span> Показать скрытые записи</span>
                        </div>
                        <div class="col-3 mx-auto">
                            <button type="submit" class="btn btn-outline-info" style="width:200px">Поиск</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class=" mx-auto" style="width:800px"> <a href="@Url.Action("NewUser", "Cabinet")" class="btn btn-outline-primary" style="width: 100%">Создать запись</a></div>
        </div>
        <div class="row my-3">
            <table class="table-dark table-bordered mx-auto" style="width:1200px; color:black;">
                <thead class="text-center">
                    <tr>
                        <th>
                            Email
                        </th>
                        <th>
                            ФИО
                        </th>
                        <th>
                            Роль на сайте
                        </th>
                        <th>
                            Действия
                        </th>
                    </tr>
                </thead>
                @foreach (var data in Model.Users)
                {
                    <tbody>
                        <tr>
                            <td>
                                @data.Email
                            </td>
                            <td>
                                @data.IdStaffs.Surname @data.IdStaffs.Name @data.IdStaffs.LastName
                            </td>
                            <td>
                                @data.UserRole
                            </td>
                            @if (data.Hidden == false)
                            {
                                <td>
                                    <a href="@Url.Action("UserEdit", "Cabinet", new { id = @data.IdUser })" class="text-success editClick" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@data.IdUser">Редактировать</a>
                                    <a href="@Url.Action("DelUser", "Cabinet", new { id = @data.IdUser })" class="text-danger" data-id="@data.IdUser">Удалить</a>
                                </td>
                            }
                            @if (data.Hidden == true)
                            {
                                <td>
                                    Запись скрыта. <a href="@Url.Action("UserShow", "Cabinet", new { id = @data.IdUser })" class="text-dark" data-id="@data.IdUser">Восстановить</a>
                                </td>
                            }
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <div class="row my-1">
            <h6 class="text-center text-danger"><strong> @ViewBag.Message</strong></h6>
        </div>
    </form>    
    <script>
        $('.editClick').on('click', function () {
            // ...
            console.log('edit clicked');
            const userId = $(this).data('id');
            // обращение на сервер
            $.get('/Cabinet/UserEdit/' + userId, function (result) {
                // результат содержит данные о пользователе
                $('#exampleModal #inputTitle1').val(result.idUser);
                $('#exampleModal #inputTitle').val(result.email);
                $('#exampleModal #idStaff').val(result.idStaff);
                $('#exampleModal #userRole').val(result.userRole);
            });

        });

    </script>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Редактировать информацию</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-action="UserEdit" asp-controller="Cabinet" asp-antiforgery="true">
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col-sm-8">
                                <input hidden type="text" asp-for="@Model.IdUser" class="form-control" id="inputTitle1" value="@Model?.IdUser" name="IdUser" readonly>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputTitle" class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input type="text" asp-for="@Model.Email" class="form-control" id="inputTitle" value="@Model?.Email" name="Email">
                                <span for="inputTitle" class="text-danger" asp-validation-for="@Model.Email"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="idRoom" class="col-sm-4 col-form-label">Выберите сотрудника</label>
                            <div class="col-sm-8">

                                @Html.DropDownListFor(x => x.IdStaff, Model.StaffSelect, new { @class = "form-control", @id = "idStaff", @value = "IdStaff", @for = "IdStaff" })

                                <span for="idRoom" class="text-danger" asp-validation-for="@Model.IdStaff"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="idRoom" class="col-sm-4 col-form-label">Выберите роль пользователя</label>
                            <div class="col-sm-8">

                                @Html.DropDownList("UserRole", ViewData["RoleSelect"] as List<SelectListItem>, new { @class = "form-control", @value = "UserRole", @id = "userRole", @for = "UserRole" })

                                <span for="idRoom" class="text-danger" asp-validation-for="@Model.UserRole"></span>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-success">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>