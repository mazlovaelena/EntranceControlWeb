@model EntranceControlWeb.Models.PassesViewModel;
@{
    ViewData["Title"] = "Create Item";

}

<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">СОЗДАНИЕ ЗАПИСИ</h5>
    </div>
    <form class="my-4" method="post" asp-action="CreatePass" asp-controller="Home">
        <div class="card rounded">
            <div class="card-body">
                <div class="row mb-3">
                    <label for="idvisitor" class="col-sm-4 col-form-label">Выберите длительность пропуска</label>
                    <div class="col-sm-8">

                        @Html.DropDownListFor(x => x.IdLong, Model.LongSelect, new { @class = "form-control" })

                        <span for="idvisitor" class="text-danger" asp-validation-for="@Model.IdLong"></span>
                        <span for="idvisitor" class="text-danger" asp-validation-for="@Model.TitleLong"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="idvisitor" class="col-sm-4 col-form-label">Выберите статус активности</label>
                    <div class="col-sm-8">

                        @Html.DropDownListFor(x => x.IdActiv, Model.ActivSelect, new { @class = "form-control" })

                        <span for="idvisitor" class="text-danger" asp-validation-for="@Model.IdLong"></span>
                        <span for="idvisitor" class="text-danger" asp-validation-for="@Model.TitleLong"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="idvisitor" class="col-sm-4 col-form-label">Выберите уровень доступа</label>
                    <div class="col-sm-8">

                        @Html.DropDownListFor(x => x.IdLevel, Model.LevelSelect, new { @class = "form-control" })

                        <span for="idvisitor" class="text-danger" asp-validation-for="@Model.IdLevel"></span>
                        <span for="idvisitor" class="text-danger" asp-validation-for="@Model.TitleLevel"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-7">
                        <a href="@Url.Action("Passes", "Home")" type="button" class="btn btn-outline-primary">Назад</a>
                        <button type="submit" class="btn btn-outline-success">Сохранить изменения</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
