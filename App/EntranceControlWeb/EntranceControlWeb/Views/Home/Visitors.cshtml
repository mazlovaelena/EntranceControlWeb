@model EntranceControlWeb.Models.VisitorViewModel;
@{
    ViewData["Title"] = "Visitors";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="/img/icon.ico" sizes="64x64" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <script src="~/js/bootstrap.bundle.min.js"></script>    
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*@await RenderSectionAsync("Scripts", required: false)*@
</head>
<body>
    <header>
        <nav class="navbar navbar-light sticky-top" style="background-color: #fbfeff">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-primary">Аккаунт: @User.Identity.Name </a>
                }
                <a class="nav-link text-danger" asp-area="" asp-controller="Login" asp-action="LogOut">Выйти</a>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Навигация в системе</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Entrance">Доступ</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Staff">Сотрудники</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Positions">Должности</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Offices">Отделы</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="SortByOff">Распределение по отделам</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Visitors">Посетители</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Rooms">Помещения</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Doors">Турникеты</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Levels">Настройка уровня доступа</a>
                                    </li>

                                }
                                else if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Staff">Сотрудники</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Positions">Должности</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Offices">Отделы</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="SortByOff">Распределение по отделам</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Visitors">Посетители</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Rooms">Помещения</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Doors">Турникеты</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Levels">Настройка уровня доступа</a>
                                    </li>
                                }
                            }
                        </ul>
                        <hr />
                        <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(UserRole.User.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Cabinet" asp-action="UserCab">Личный кабинет</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Cabinet" asp-action="AdminCab">Личный кабинет</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Cabinet" asp-action="SysAdminCab">Личный кабинет</a>
                                    </li>
                                }
                            }

                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(UserRole.User.ToString()))
                                {
                                    <li class="nav-item" style="position: relative; left: 950px">
                                        <a class="nav-link active" href="~/RukUser.pdf" target="_blank">Руководство пользователя</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" href="~/RukAdmin.pdf" target="_blank">Руководство начальника</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" href="~/RukSysAdmin.pdf" target="_blank">Руководство администратора</a>
                                    </li>
                                }
                            }
                            <li class="nav-item">
                                <a class="nav-link active text-danger" asp-controller="Login" asp-action="LogOut">Выход</a>
                            </li>

                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row my-3">
            <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
            <h5 class="text-center">ПОСЕТИТЕЛИ</h5>
        </div>
        <div class="row my-3">
            <table class="table-dark table-bordered" style="width:1200px; color:black;">
                <thead>
                    <tr class="text-center">
                        <th>ID Гость</th>
                        <th>ФИО</th>
                        <th>Мобильный телефон</th>
                        <th>Уровень доступа</th>
                        <th>№ пропуска</th>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole(UserRole.SysAdmin.ToString()))
                            {
                                <th>Действия</th>
                            }
                            else if (User.IsInRole(UserRole.Admin.ToString()))
                            {
                                <th>Действия</th>
                            }
                        }
                    </tr>
                </thead>

                @foreach (var data in Model.Visitors)
                {
                    <tbody>
                        <tr class="text-md-start">
                            <td>@data.Idvisitor</td>
                            <td>@data.Fio</td>
                            <td>@data.MobilePhone</td>
                            <td>@data.IdLevels.TitleLevel</td>
                            <td>@data.IdPasses.IdPass</td>
                            @if (User.Identity.IsAuthenticated)
                            {

                                if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                {
                                    <td>
                                        <a href="@Url.Action("VisEdit", "Home", new { id = @data.Idvisitor})" class="text-success editClick" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@data.Idvisitor">Редактировать</a>
                                        <a href="@Url.Action("DelVis", "Home", new { id = @data.Idvisitor})" class="text-danger" data-id="@data.Idvisitor">Удалить</a>
                                    </td>
                                }
                                else if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <td>
                                        <a href="@Url.Action("VisEdit", "Home", new { id = @data.Idvisitor})" class="text-success editClick" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@data.Idvisitor">Редактировать</a>

                                    </td>
                                }
                            }
                        </tr>
                    </tbody>
                }
            </table>

            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole(UserRole.SysAdmin.ToString()))
                {

                    <div class="row m-2">
                        <div class="col-2"></div>
                        <div class="col-8"> <a href="@Url.Action("CreateVisit", "Home")" class="btn btn-outline-primary" style="width: 100%">Создать запись</a></div>
                        <div class="col-2"></div>

                    </div>

                }
            }

            <script>
                $('.editClick').on('click', function () {
                    // ...
                    console.log('edit clicked');
                    const visId = $(this).data('id');
                    // обращение на сервер
                    $.get('/Home/VisEdit/' + visId, function (result) {
                        // результат содержит данные о госте
                        $('#exampleModal #inputTitle').val(result.idvisitor);
                        $('#exampleModal #inputTitle1').val(result.fio);
                        $('#exampleModal #inputTitle2').val(result.mobilePhone);
                        $('#exampleModal #inputTitle3').val(result.idLevel);
                        $('#exampleModal #inputTitle4').val(result.idPass);
                    });

                });

            </script>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Редактировать информацию</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" asp-action="VisEdit" asp-controller="Home">
                            <div class="modal-body">
                                <div class="row mb-3">
                                    <input hidden readonly asp-for="@Model.Idvisitor." value="@Model?.Idvisitor" type="text" class="form-control" id="inputTitle">
                                    <label for="inputTitle1" class="col-sm-4 col-form-label">Фамилия Имя Отчетсво</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@Model.Fio" value="@Model?.Fio" type="text" class="form-control" id="inputTitle1">
                                        <span for="inputTitle1" class="text-danger" asp-validation-for="@Model.Fio"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputTitle2" class="col-sm-4 col-form-label">Мобильный телефон</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@Model.MobilePhone" value="@Model?.MobilePhone" type="text" class="form-control" id="inputTitle2">
                                        <span for="inputTitle2" class="text-danger" asp-validation-for="@Model.MobilePhone"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="#inputTitle3" class="col-sm-4 col-form-label">Уровень доступа</label>
                                    <div class="col-sm-8">
                                        <select name="idLevel" class="form-control" id="#inputTitle3">
                                           @foreach(var data in Model.Visitors)
                                            {
                                               <option value="@data.IdLevel">@data.IdLevels.TitleLevel</option>
                                            }
                                        </select>
                                        <span for="idRoom" class="text-danger" asp-validation-for="@Model.IdLevel"></span>
                                        <span for="idRoom" class="text-danger" asp-validation-for="@Model.TitleLevel"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">                                    
                                    <label for="inputTitle4" class="col-sm-4 col-form-label">№ пропуска</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@Model.IdPass" value="@Model?.IdPass" type="text" class="form-control" id="inputTitle4">
                                        <span for="inputTitle4" class="text-danger" asp-validation-for="@Model.IdPass"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Отмена</button>
                                <button type="submit" class="btn btn-success">Сохранить</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>