@model EntranceControlWeb.Models.StaffViewModel;
@{
    ViewData["Title"] = "Staff";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="/img/icon.ico" sizes="64x64" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @*@await RenderSectionAsync("Scripts", required: false)*@
</head>
<body>
    <header>
        <nav class="navbar navbar-light sticky-top" style="background-color: #fbfeff">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-primary">Аккаунт: @User.Identity.Name </a>
                }
                <a class="nav-link text-danger" asp-area="" asp-controller="Login" asp-action="LogOut">Выйти</a>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Навигация в системе</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Entrance">Доступ</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Staff">Сотрудники</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Positions">Должности</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Offices">Отделы</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="SortByOff">Распределение по отделам</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Visitors">Посетители</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Rooms">Помещения</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Doors">Турникеты</a>
                                    </li>
                                    
                                }
                                else if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Staff">Сотрудники</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Positions">Должности</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Offices">Отделы</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="SortByOff">Распределение по отделам</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Visitors">Посетители</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Rooms">Помещения</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Doors">Турникеты</a>
                                    </li>
                                   
                                }
                            }
                        </ul>
                        <hr />
                        <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(UserRole.User.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Cabinet" asp-action="UserCab">Личный кабинет</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Cabinet" asp-action="AdminCab">Личный кабинет</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Cabinet" asp-action="SysAdminCab">Личный кабинет</a>
                                    </li>
                                }
                            }

                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(UserRole.User.ToString()))
                                {
                                    <li class="nav-item" style="position: relative; left: 950px">
                                        <a class="nav-link active" href="~/RukUser.pdf" target="_blank">Руководство пользователя</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" href="~/RukAdmin.pdf" target="_blank">Руководство начальника</a>
                                    </li>
                                }
                                else if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" href="~/RukSysAdmin.pdf" target="_blank">Руководство администратора</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Passes">Картотека пропусков</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Dictionary">Редактировать справочники</a>
                                    </li>
                                }
                            }
                            <li class="nav-item">
                                <a class="nav-link active text-danger" asp-controller="Login" asp-action="LogOut">Выход</a>
                            </li>

                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row my-3">
            <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
            <h5 class="text-center">СОТРУДНИКИ</h5>
        </div>
        <div class="row my-3 mb-2 sticky-top">
            <form asp-action="Staff" asp-controller="Home">
            <div class="card rounded m-3 shadow-lg mx-auto" style="width:500px">
                <div class="card-body">                    
                    <div class="row">
                        <div class="col-2 text-end">
                            <label>ФИО:</label>
                        </div>
                        <div class="col-6">
                            @Html.TextBox("Search","", new { @class = "form-control", @placeholder = "Поиск" })                            
                        </div>
                        <div class="col-4 mx-auto">
                            <button type="submit" class="btn btn-outline-info">Поиск</button>
                        </div>                                               
                    </div>
                </div>
            </div>
            </form>
        </div>

        <div class="row my-3 mb-2">

            @foreach (var data in Model.Staffs)
            {

                <div class="card rounded m-3 shadow-lg mx-auto">
                    <div class="row g-0">
                        <div class="col-md-3">
                            <img src="@data.Image" class="img-fluid rounded-start m-2" style="width: 200px; height: 200px">
                        </div>
                        <div class="col-md-9">
                            <div class="card-body" style="font-size: 17px">
                                <div class="row">
                                    <div class="col-8">
                                        <input hidden type="text" asp-for="@Model.IdStaff" class="form-control" id="inputIdStaff" value="@Model?.IdStaff" readonly>
                                        <div class="row">
                                            ФИО: @data.Surname @data.Name @data.LastName
                                        </div>
                                        <div class="row">
                                            Дата рождения: @data.Birthday
                                        </div>
                                        <div class="row">
                                            Корпоративная почта: @data.CorpEmail
                                        </div>
                                        <div class="row">
                                            Мобильный телефон: @data.MobPhone
                                        </div>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                            {
                                                <div class="row">
                                                    № пропуска:<a href="@Url.Action("PassEditStaff", "Home", new { id = @data.IdPass })" class="text-primary editClick" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@data.IdPass">@data.IdPass</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    № пропуска: @data.IdPass
                                                </div>
                                            }

                                        }


                                    </div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        if (User.IsInRole(UserRole.SysAdmin.ToString()))
                                        {
                                            <div class="col-4">
                                                <div class="row my-1">
                                                    <a class="btn btn-outline-success" data-id="@data.IdStaff" href="@Url.Action("StaffEdit", "Home", new { id = @data.IdStaff })">Редактировать</a> <br />

                                                </div>
                                                <div class="row my-1">

                                                    <a class="btn btn-outline-danger" data-id="@data.IdStaff" href="@Url.Action("DelStaff", "Home", new { id = @data.IdStaff })">Удалить запись</a>
                                                </div>
                                                <div class="row my-1">

                                                    <a href="@Url.Action("CreateStaff", "Home")" class="btn btn-outline-primary">Создать запись</a>
                                                </div>
                                            </div>
                                        }
                                        else if (User.IsInRole(UserRole.Admin.ToString()))
                                        {
                                            <div class="col-4">
                                                <div class="row my-1">
                                                    <a class="btn btn-outline-success" data-id="@data.IdStaff" href="@Url.Action("StaffEdit", "Home", new { id = @data.IdStaff })">Редактировать</a> <br />

                                                </div>
                                            </div>
                                        }

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
            <script>
                $('.editClick').on('click', function () {
                    // ...
                    console.log('edit clicked');
                    const visId = $(this).data('id');
                    // обращение на сервер
                    $.get('/Home/PassEditStaff/' + visId, function (result) {
                        // результат содержит данные о госте
                        $('#exampleModal #inputTitle').val(result.idPass);
                        $('#exampleModal #inputTitle1').val(result.idLong);
                        $('#exampleModal #inputTitle2').val(result.idActiv);
                        $('#exampleModal #inputTitle3').val(result.idLevel);
                    });

                });

            </script>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Редактировать информацию</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" asp-action="PassEditStaff" asp-controller="Home">
                            <div class="modal-body">
                                <div class="row mb-3">
                                    <label for="#inputTitle" class="col-sm-4 col-form-label">№ пропуска</label>
                                    <div class="col-sm-8">
                                        <input readonly asp-for="@Model.IdPass" value="@Model?.IdPass" type="text" class="form-control" id="inputTitle">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="#inputTitle1" class="col-sm-4 col-form-label">Длительность</label>
                                    <div class="col-sm-8">
                                       
                                        @Html.DropDownListFor(x => x.IdLong, Model.LongSelect, new { @class = "form-control", @id = "inputTitle1", @value = "IdLong", @for = "IdLong" })

                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="#inputTitle2" class="col-sm-4 col-form-label">Статус активности</label>
                                    <div class="col-sm-8">

                                        @Html.DropDownListFor(x => x.IdActiv, Model.ActivSelect, new { @class = "form-control", @id = "inputTitle2", @value = "IdActiv", @for = "IdActiv" })

                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="#inputTitle3" class="col-sm-4 col-form-label">Уровень доступа</label>
                                    <div class="col-sm-8">

                                        @Html.DropDownListFor(x => x.IdLevel, Model.LevelSelect, new { @class = "form-control", @id = "inputTitle3", @value = "IdLevel", @for = "IdLevel" })

                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Отмена</button>
                                <button type="submit" class="btn btn-success">Сохранить</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>