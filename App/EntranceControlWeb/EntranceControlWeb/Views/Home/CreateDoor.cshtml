@model EntranceControlWeb.Models.DoorViewModel;
@{
    ViewData["Title"] = "Create Item";

}
<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">СОЗДАНИЕ ЗАПИСИ</h5>
    </div>
    <form class="my-4" method="post" asp-action="CreateDoor" asp-controller="Home">
        <div class="card rounded">
            <div class="card-body">
                <div class="row mb-3">
                    <label for="inputTitle" class="col-sm-4 col-form-label">Наименование турникета</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="@Model.TitleDoor" value="@Model?.TitleDoor" class="form-control" id="inputTitle">
                        <span for="inputTitle" class="text-danger" asp-validation-for="@Model.TitleDoor"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="idRoom" class="col-sm-4 col-form-label">Помещение</label>
                    <div class="col-sm-8">

                        @Html.DropDownListFor(x => x.IdRoom, ViewBag.Room as SelectList, new { @class = "form-control" })

                        <span for="idRoom" class="text-danger" asp-validation-for="@Model.IdRoom"></span>
                        <span for="idRoom" class="text-danger" asp-validation-for="@Model.TitleRoom"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-7">
                        <a href="@Url.Action("Doors", "Home")" type="button" class="btn btn-outline-primary">Назад</a>
                        <button type="submit" class="btn btn-outline-success">Сохранить изменения</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
