@model EntranceControlWeb.Models.DictionaryViewModel;
@{
    ViewData["Title"] = "Dictionary";
}

<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">СПРАВОЧНЫЕ ТАБЛИЦЫ</h5>
    </div>
    <div class="row my-3">
        <h5 class="text-center">УРОВНИ ДОСТУПА</h5>
    </div>
    <div class="row my-3">
        <form>
            <div class="card rounded m-3 shadow-lg mx-auto" style="width:400px">
                <div class="card-body">
                    <div class="row">
                        @Html.CheckBox("Hide", false, new { @hidden = true })
                        <button class="btn btn-outline-info mx-auto" style="width:250px" onclick="changeCheckbox()">Показать скрытые записи</button>
                    </div>
                </div>
            </div>
            <script>
                function changeCheckbox() {
                    var checkbox = document.getElementById("Hide");
                    checkbox.checked = !checkbox.checked;
                }
            </script>
        </form>
    </div>
    <div class="row my-3">
        <div class="row my-2">
            <a href="@Url.Action("CreateLevel", "Home")" class="btn btn-outline-primary mx-auto" style="width:500px">Создать запись</a>
        </div>

        <table class="table-dark table-bordered mx-auto" style="width:1200px; color:black;">
            <thead>
                <tr class="text-center">
                    <th>Наименование уровня</th>
                    <th>Действия</th>
                </tr>
            </thead>
            @foreach (var data in Model.Levels)
            {
                <tbody>
                    <tr class="text-md-start">
                        <td>@data.TitleLevel</td>

                        @if (data.Hidden == false)
                        {
                            <td>
                                <a href="@Url.Action("LevelEdit", "Home", new { id = @data.IdLevel })" class="text-success editClick" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@data.IdLevel">Редактировать</a>
                                <a href="@Url.Action("DelLevel", "Home", new { id = @data.IdLevel })" class="text-danger" data-id="@data.IdLevel">Удалить</a>
                            </td>
                        }

                        @if (data.Hidden == true)
                        {
                            <td>
                                Запись скрыта. <a href="@Url.Action("ShowLevel", "Home", new { id = @data.IdLevel })" class="text-dark" data-id="@data.IdLevel">Восстановить</a>
                            </td>
                        }

                    </tr>
                </tbody>
            }

        </table>
    </div>


    <div class="row my-3">
        <h5 class="text-center">СТАТУСЫ ДОСТУПА</h5>
    </div>
    <div class="row my-3">

        <div class="row my-2">
            <a href="@Url.Action("CreateStatus", "Home")" class="btn btn-outline-primary mx-auto" style="width:500px">Создать запись</a>
        </div>


        <table class="table-dark table-bordered mx-auto" style="width:1200px; color:black;">
            <thead>
                <tr class="text-center">
                    <th>Наименование статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            @foreach (var data in Model.Statuses)
            {
                <tbody>
                    <tr class="text-md-start">
                        <td>@data.TitleStatus</td>
