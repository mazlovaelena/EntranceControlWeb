@model EntranceControlWeb.Models.SortingByOfficeViewModel;
@{
    ViewData["Title"] = "Sorting Edit";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*@await RenderSectionAsync("Scripts", required: false)*@
</head>
<body>
    <header>
        <nav class="navbar navbar-light sticky-top" style="background-color: #fbfeff">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-primary">Аккаунт: @User.Identity.Name </a>
                }
                <a class="nav-link text-danger" asp-area="" asp-controller="Login" asp-action="LogOut">Выйти</a>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Навигация в системе</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Entrance">Доступ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Staff">Сотрудники</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Positions">Должности</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Offices">Отделы</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="SortByOff">Распределение по отделам</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Rooms">Помещения</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Doors">Турникеты</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Levels">Настройка уровня доступа</a>
                            </li>


                        </ul>
                        <hr />
                        <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action=".....">Личный кабинет</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="....">Руководство сотрудника</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="....">Руководство начальника</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="....">Руководство администратора</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active text-danger" asp-controller="Home" asp-action="....">Выход</a>
                            </li>

                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row my-3">
            <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
            <h5 class="text-center">РЕДАКТИРОВАТЬ ИНФОРМАЦИЮ</h5>
        </div>
        <form class="my-4" method="post" asp-action="SortEdit" asp-controller="Home">
            <div class="card rounded">
                <div class="card-body">
                    <div class="row mb-3">
                        <input hidden readonly asp-for="@Model.IdItem" value="@Model?.IdItem" type="text" class="form-control" id="IdItem">
                        <label for="inputDateBeg" class="col-sm-2 col-form-label">Время начала смены</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model.TimeBegin" value="@Model?.TimeBegin" type="datetime-local" class="form-control" id="inputDateBeg">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputDateEnd" class="col-sm-2 col-form-label">Время завершения смены</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model.TimeEnd" value="@Model?.TimeEnd" type="datetime-local" class="form-control" id="inputDateEnd">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="idStaff" class="col-sm-2 col-form-label">Сотрудник</label>
                        <div class="col-sm-10">
                            <select name="idStaff" class="form-control" id="idStaff">

                                @foreach (var data in Model.Sortings)
                                {
                                    <option value="@data.IdStaff">@data.IdStaffs.Surname @data.IdStaffs.Name @data.IdStaffs.LastName</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="idPost" class="col-sm-2 col-form-label">Должность</label>
                        <div class="col-sm-10">
                            <select name="idPost" class="form-control" id="idPost">

                                @foreach (var data in Model.Sortings)
                                {
                                    <option value="@data.IdPost">@data.IdPosts.TitlePost</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="idOffice" class="col-sm-2 col-form-label">Отдел</label>
                        <div class="col-sm-10">
                            <select name="idOffice" class="form-control" id="idOffice">

                                @foreach (var data in Model.Sortings)
                                {
                                    <option value="@data.IdOffice">@data.IdOffices.TitleOffice</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPhone" class="col-sm-2 col-form-label">Рабочий телефон</label>
                        <div class="col-sm-10">
                            <input type="tel" class="form-control" id="inputPhone">
                        </div>
                    </div>
                   
                    <div class="row mb-3">
                        <div class="col-5">
                            <a href="@Url.Action("SortByOff", "Home")" type="button" class="btn btn-outline-dark">Назад</a>
                            <button type="submit" class="btn btn-outline-primary">Сохранить изменения</button>
                        </div>
                    </div>

                </div>
            </div>
        </form>




    </div>



</body>
</html>
