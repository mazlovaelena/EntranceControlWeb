@model EntranceControlWeb.Models.SortingByOfficeViewModel;
@{
    ViewData["Title"] = "Sort By Offices";

}


<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">РАСПРЕДЕЛЕНИЕ ПО ОТДЕЛАМ</h5>
    </div>
    <div class="row mx-auto" style="width:1200px">
        <div class="accordion accordion-flush" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed border-info shadow" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Настроить фильтры
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <form>
                        <div class="accordion-body border-info shadow">
                            <div class="row mb-3">
                                <label for="DateEntr" class="col-sm-4 col-form-label">Время начала смены</label>
                                <div class="col-sm-8">
                                    @Html.TextBox("Search1", "", new { @class = "form-control", @placeholder = "Поиск", @type = "datetime" })

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="DateExit" class="col-sm-4 col-form-label">Время завершения смены</label>
                                <div class="col-sm-8">
                                    @Html.TextBox("Search2", "", new { @class = "form-control", @placeholder = "Поиск", @type = "datetime" })

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="idRoom" class="col-sm-4 col-form-label">Сотрудник</label>
                                <div class="col-sm-8">

                                    @Html.DropDownListFor(x => x.IdStaff, Model.StaffSelect, "", new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="idPass" class="col-sm-4 col-form-label">Должность</label>
                                <div class="col-sm-8">

                                    @Html.DropDownListFor(x => x.IdPost, Model.PostSelect, "", new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="idDoor" class="col-sm-4 col-form-label">Отдел</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(x => x.IdOffice, Model.OfficeSelect, "", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row mb-2">
                                <label for="button" class="col-sm-8 col-form-label"></label>
                                <div class="col-sm-2">
                                    <button type="submit" class="btn btn-outline-primary">Фильтровать</button>
                                </div>
                                <div class="col-sm-2">
                                    <input type="submit" formaction="ClearSort" class="btn btn-outline-danger" value="Сбросить фильтры" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-3">
        <table class="table-dark table-bordered mx-auto" style="width:1200px; color:black;">
            <thead>
                <tr class="text-center">
                    <th>@Html.ActionLink("ID запись", "SortByOff", new { order = ViewBag.IdSort })</th>
                    <th>Время начала смены</th>
                    <th>Время завершения смены</th>
                    <th>@Html.ActionLink("Сотрудник", "SortByOff", new { order = ViewBag.SortStaff })</th>
                    <th>@Html.ActionLink("Должность", "SortByOff", new { order = ViewBag.SortPost })</th>
                    <th>@Html.ActionLink("Отдел", "SortByOff", new { order = ViewBag.SortOffice })</th>
                    <th>Рабочий телефон</th>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole(UserRole.SysAdmin.ToString()))
                        {
                            <th>Действия</th>
                        }
                        else if (User.IsInRole(UserRole.Admin.ToString()))
                        {
                            <th>Действия</th>
                        }
                    }
                </tr>
            </thead>

            @foreach (var data in Model.Sortings)
            {
                <tbody>
                    <tr class="text-md-start">
                        <td>@data.IdItem</td>
                        <td>@data.TimeBegin</td>
                        <td>@data.TimeEnd</td>
                        <td>@data.IdStaffs.Surname @data.IdStaffs.Name @data.IdStaffs.LastName</td>
                        <td>@data.IdPosts.TitlePost</td>
                        <td>@data.IdOffices.TitleOffice</td>
                        <td>@data.WorkPhone</td>
                        @if (User.Identity.IsAuthenticated)
                        {

                            if (User.IsInRole(UserRole.SysAdmin.ToString()))
                            {
                                <td>
                                    <a href="@Url.Action("SortEdit", "Home", new { id = @data.IdItem })" class="text-success" data-id="@data.IdItem">Редактировать</a>
                                    <a href="@Url.Action("DelSort", "Home", new { id = @data.IdItem })" class="text-danger" data-id="@data.IdItem">Удалить</a>
                                </td>
                            }
                            else if (User.IsInRole(UserRole.Admin.ToString()))
                            {
                                <td>
                                    <a href="@Url.Action("SortEdit", "Home", new { id = @data.IdItem })" class="text-success" data-id="@data.IdItem">Редактировать</a>

                                </td>
                            }
                        }
                    </tr>
                </tbody>
            }
        </table>

        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole(UserRole.SysAdmin.ToString()))
            {

                <div class="row m-2">

                    <div class=" mx-auto" style="width:200px"> <a href="@Url.Action("CreateSort", "Home")" class="btn btn-outline-primary" style="width: 100%">Создать запись</a></div>

                </div>

            }
        }

    </div>
</div>
