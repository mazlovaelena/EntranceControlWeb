@model EntranceControlWeb.Models.DoorViewModel;
@{
    ViewData["Title"] = "Doors";

}

<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">ТУРНИКЕТЫ</h5>
    </div>
    <div class="row mx-auto" style="width:1200px">
        <div class="accordion accordion-flush" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed border-info shadow" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Настроить фильтры
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <form>
                        <div class="accordion-body border-info shadow">
                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Наименование турникета</label>
                                <div class="col-sm-8">

                                    @Html.TextBox("Search", "", new { @class = "form-control", @placeholder = "Поиск" })

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="idRoom" class="col-sm-4 col-form-label">Помещение</label>
                                <div class="col-sm-8">

                                    @Html.DropDownListFor(x => x.IdRoom, Model.RoomSelect, "", new { @class = "form-control" })

                                </div>
                               
                            </div>
                            <div class="row mb-2">
                                <label for="button" class="col-sm-8 col-form-label"></label>
                                <div class="col-sm-2">
                                    <button type="submit" formaction="Doors" class="btn btn-outline-primary">Фильтровать</button>
                                </div>
                                <div class="col-sm-2">
                                    <input type="submit" class="btn btn-outline-danger" formaction="ClearDoor" value="Сбросить фильтры" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-3">
        <table class="table-dark table-bordered  mx-auto" style="width:1200px; color:black;">
            <thead>
                <tr class="text-center">
                    <th>ID Турникет</th>
                    <th>@Html.ActionLink("Наименование турникета", "Doors", new { sort = ViewBag.DoortSort })</th>
                    <th>@Html.ActionLink("Помещение", "Doors", new { sort = ViewBag.RoomSort })</th>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole(UserRole.SysAdmin.ToString()))
                        {
                            <th>Действия</th>
                        }
                        else if (User.IsInRole(UserRole.Admin.ToString()))
                        {
                            <th>Действия</th>
                        }
                    }
                </tr>
            </thead>

            @foreach (var data in Model.Doors)
            {
                <tbody>
                    <tr class="text-md-start">

                        <td>@data.IdDoor</td>
                        <td>@data.TitleDoor</td>
                        <td>@data.IdRooms.TitleRoom</td>

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole(UserRole.SysAdmin.ToString()))
                            {
                                <td>
                                    <a href="@Url.Action("DoorEdit", "Home", new { id = @data.IdDoor })" class="text-success editClick" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@data.IdDoor">Редактировать</a>
                                    <a href="@Url.Action("DelDoor", "Home", new { id = @data.IdDoor })" class="text-danger" data-id="@data.IdDoor">Удалить</a>
                                </td>
                            }
                            else if (User.IsInRole(UserRole.Admin.ToString()))
                            {
                                <td>
                                    <a href="@Url.Action("DoorEdit", "Home", new { id = @data.IdDoor })" class="text-success editClick" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@data.IdDoor">Редактировать</a>

                                </td>
                            }
                        }

                    </tr>
                </tbody>
            }

        </table>

        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole(UserRole.SysAdmin.ToString()))
            {

                <div class="row m-2">

                    <div class=" mx-auto" style="width:200px"> <a href="@Url.Action("CreateDoor", "Home")" class="btn btn-outline-primary" style="width: 100%">Создать запись</a></div>

                </div>
            }
        }

        <script>
            $('.editClick').on('click', function () {
                // ...
                console.log('edit clicked');
                const doorId = $(this).data('id');
                // обращение на сервер
                $.get('/Home/DoorEdit/' + doorId, function (result) {
                    // результат содержит данные о двери
                    $('#exampleModal #inputTitle1').val(result.idDoor);
                    $('#exampleModal #inputTitle').val(result.titleDoor);
                    $('#exampleModal #idRoom').val(result.idRoom);
                });

            });

        </script>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Редактировать информацию</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-action="DoorEdit" asp-controller="Home">
                        <div class="modal-body">
                            <div class="row mb-3">
                                <div class="col-sm-8">
                                    <input hidden type="text" asp-for="@Model.IdDoor" class="form-control" id="inputTitle1" value="@Model?.IdDoor" name="IdDoor" readonly>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputTitle" class="col-sm-4 col-form-label">Наименование турникета</label>
                                <div class="col-sm-8">
                                    <input type="text" asp-for="@Model.TitleDoor" class="form-control" id="inputTitle" value="@Model?.TitleDoor" name="TitleDoor">
                                    <span for="inputTitle" class="text-danger" asp-validation-for="@Model.TitleDoor"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="idRoom" class="col-sm-4 col-form-label">Помещение</label>
                                <div class="col-sm-8">

                                    @Html.DropDownListFor(x => x.IdRoom, Model.RoomSelect, new { @class = "form-control", @id = "idRoom", @value = "IdRoom", @for = "IdRoom" })

                                    <span for="idRoom" class="text-danger" asp-validation-for="@Model.IdRoom"></span>
                                    <span for="idRoom" class="text-danger" asp-validation-for="@Model.TitleRoom"></span>
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Отмена</button>
                            <button type="submit" class="btn btn-success">Сохранить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
