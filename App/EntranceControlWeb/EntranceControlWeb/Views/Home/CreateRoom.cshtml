@model EntranceControlWeb.Models.RoomViewModel;
@{
    ViewData["Title"] = "Create Item";
}

<div class="container">
    <div class="row my-3">
        <h3 class="text-center"><strong>CИСТЕМА КОНТРОЛЯ ДОСТУПА</strong></h3>
        <h5 class="text-center">СОЗДАНИЕ ЗАПИСИ</h5>
    </div>
    <form class="my-4" method="post" asp-action="CreateRoom" asp-controller="Home" asp-antiforgery="true">
        <div class="card rounded">
            <div class="card-body">
                <div class="row mb-3">
                    <label for="inputTitle" class="col-sm-4 col-form-label">Наименование помещения</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="@Model.TitleRoom" value="@Model?.TitleRoom" class="form-control" id="inputTitle">
                        <span for="inputTitle" class="text-danger" asp-validation-for="@Model.TitleRoom"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="idRoom" class="col-sm-4 col-form-label">Уровень доступа</label>
                    <div class="col-sm-8">

                        @Html.DropDownListFor(x => x.IdLevel, Model.LevelSelect, new { @class = "form-control" })

                        <span for="idRoom" class="text-danger" asp-validation-for="@Model.IdLevel"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-7">
                        <a id="back" class="btn btn-outline-primary">Назад</a>
                        <button type="submit" class="btn btn-outline-success">Сохранить изменения</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                    </div>
                    <div class="modal-body">
                        Вы хотите сохранить внесенные изменения?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                        <a type="button" href="@Url.Action("Rooms", "Home")" class="btn btn-danger">Не сохранять</a>
                        <button type="submit" class="btn btn-success">Сохранить</button>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                // установим флаг о том, что данные не изменены
                var dataChanged = false;
                var url = '/Home/Rooms';
                // обработчик события изменения данных
                $('form').on('input', function () {
                    dataChanged = true; // изменяем флаг на true
                });
                // обработчик нажатия кнопки
                $('#back').on('click', function () {
                    if (dataChanged) { // если данные были изменены
                        // вывести модальное окно
                        $('#exampleModal').modal('show');
                    }
                    else {
                        window.location.href = url;
                    }
                });
            });
        </script>
    </form>
</div>
